{
	"name": "obsidian-rdf-tools",
	"version": "1.0.0",
	"description": "Work with RDF data and SPARQL queries directly in your vault. Extract turtle code blocks as knowledge graphs and query them with live-updating SPARQL results.",
	"type": "module",
	"main": "main.js",
	"scripts": {
		"dev": "node esbuild.config.mjs",
		"build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production && ./bin/copy-to-test-vault.sh",
		"version": "node version-bump.mjs && git add manifest.json versions.json",
		"lint": "eslint src/**/*.ts",
		"lint:fix": "eslint src/**/*.ts --fix",
		"format": "prettier --write src/**/*.ts",
		"format:check": "prettier --check src/**/*.ts",
		"typecheck": "tsc -noEmit -skipLibCheck",
		"test": "vitest",
		"test:run": "vitest run",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest run --coverage",
		"test:watch": "vitest --watch",
		"check-all": "npm run format && npm run lint:fix && npm run typecheck && npm run test:run"
	},
	"keywords": ["obsidian", "rdf", "sparql", "semantic-web", "knowledge-graph", "turtle"],
	"author": "Shad Reynolds",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/shad/rdf-tools.git"
	},
	"homepage": "https://github.com/shad/rdf-tools#readme",
	"engines": {
		"node": ">=18.0.0"
	},
	"devDependencies": {
		"@types/node": "^18.19.0",
		"@typescript-eslint/eslint-plugin": "^6.21.0",
		"@typescript-eslint/parser": "^6.21.0",
		"@vitest/coverage-v8": "^3.2.4",
		"@vitest/ui": "^3.2.4",
		"esbuild": "^0.19.0",
		"happy-dom": "^18.0.1",
		"obsidian": "latest",
		"prettier": "^3.6.2",
		"tslib": "2.6.2",
		"typescript": "^5.3.0",
		"vitest": "^3.2.4"
	},
	"dependencies": {
		"@comunica/query-sparql": "^4.3.0",
		"@comunica/query-sparql-rdfjs": "^4.3.0",
		"n3": "^1.26.0",
		"sparqljs": "^3.7.3"
	}
}
